<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/usuarios/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="username" class="form-control" placeholder="Title" value="{{link.username}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Password" value="{{link.password}}">
                </div>
                <div class="form-group">
                    <textarea name="fullname" rows="2" class="form-control" placeholder="fullname">{{link.fullname}}</textarea>
                </div>
                <div class="form-group">



                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>